<h2>Your Cart</h2>
<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @cart_items.each do |entry| %>
      <li>
        <%= entry[:item].title %> - Quantity: <%= entry[:quantity] %>
        <%= button_to "Remove", cart_item_path(entry[:item]), method: :delete %>
      </li>
    <% end %>
  </ul>
<% end %>
